<?xml version="1.0" encoding="UTF-8"?>
<mustache>
  <script id="updates_panel" type="text/template">
    <div class="panel panel-default">
      <div class="panel-heading">$Home.Updates.Updates_notes;</div>
      <div class="panel-body">
        <ul style="padding:0px; margin:0px 0px 0px 10px; list-style:none;">
          {{#updates}}
          <li>
            <ul style="margin:0px 0px 5px 0px; padding:0px; color:#FFF;">
              <li style="list-style:none;"><strong>{{author}}</strong><i> ({{date}})</i></li>
              <li style="list-style:none;">{{note}}</li>
            </ul>
          </li>
          {{/updates}}
        </ul>
      </div>
    </div>
  </script>
</mustache>