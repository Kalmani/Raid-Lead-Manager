<?xml version="1.0" encoding="UTF-8"?>
<mustache>
  <script id="select_wish_item" type="text/template">
    <div class="col-md-4">
      <div id="current_item">
      </div>
      <div id="selected_bis">
      </div>
    </div>
    <div id="change_item" class="col-md-8">
    </div>
  </script>
  <script id="current_item" type="text/template">
    <div class="panel panel-default">
      <div class="panel-heading">Equipement actuel</div>
      <div class="panel-body">
        <div class="item">
          <table border="0" cellpadding="0" cellspacing="0" width="100%">
            <tr>
              <td width="56" class="equipement_icon" style="width:56px;">
                <img src="http://eu.media.blizzard.com/wow/icons/56/{{current_item.icon}}.jpg" />
                <span class="frame frame_{{current_item.quality}}"> </span>
              </td>
              <td align="left">
                <span class="color-4">{{current_item.name}}</span><br />
                <span style="color:#ffd200;">
                  {{current_item.itemLevel}}<br />
                </span>
              </td>
            </tr>
          </table>
          <a href="#" rel="item={{current_item.id}}" class="wowheadlink"> </a>
        </div>
        <br />
        <table class="table table-striped table-condensed">
          {{#current_item.stats}}
          <tr>
            <td align="left" width="140">
              {{name}}
            </td>
            <td align="center" width="90">
              {{amount}}
            </td>
          </tr>
          {{/current_item.stats}}
        </table>
        <form>
          <input type="hidden" value="99332" name="item_id" />
          <center>
            <button type="submit" class="btn btn-success form-control">
              Conserver
            </button>
          </center>
        </form>
      </div>
    </div>
  </script>
  <script id="selected_bis" type="text/template">
    <div class="panel panel-default">
      <div class="panel-heading">BIS sélectionné</div>
      <div id="wish_new" class="panel-body">
        <table cellspacing="1" cellpadding="0" border="0" bgcolor="#D1B285" width="100%" align="left">
          <tbody>
            <tr>
              <td class="general" align="left">
                <table cellspacing="0" cellpadding="0" border="0" width="100%">
                  <tbody>
                    <tr>
                      <td class="equipement_icon" width="56" style="width:56px; padding-left:5px;">
                        <img src="http://eu.media.blizzard.com/wow/icons/56/inv_helm_mail_reputation_c_01.jpg" />
                        <span class="frame frame_4"> </span>
                      </td>
                      <td align="left">
                        <span class="color-4">Regard terrifiant</span>
                        <br />
                        <span style="color:#999999;">
                          489
                          <br />
                        </span>
                      </td>
                    </tr>
                  </tbody>
                </table>
              <a class="wowheadlink" rel="item=89820&domain=fr" href="#"> </a>
            </td>
          </tr>
          <tr>
            <td valign="top">
              <br />
              <table class="table table-striped table-condensed">
                <tbody>
                  <tr>
                    <td width="140" align="left"> Agilité : </td>
                    <td width="90" align="center">
                      906 (
                      <span style="color:#1EFF00">+906</span>
                      )
                    </td>
                  </tr>
                  <tr>
                    <td width="140" align="left"> Touché : </td>
                    <td width="90" align="center">
                      720 (
                      <span style="color:#1EFF00">+720</span>
                      )
                    </td>
                  </tr>
                  <tr>
                    <td width="140" align="left"> Hâte : </td>
                    <td width="90" align="center">
                      530 (
                      <span style="color:#1EFF00">+530</span>
                      )
                    </td>
                  </tr>
                  <tr>
                    <td width="140" align="left"> Endurance : </td>
                    <td width="90" align="center">
                      1719 (
                      <span style="color:#1EFF00">+1719</span>
                      )
                    </td>
                  </tr>
                </tbody>
              </table>
            </td>
          </tr>
        </tbody>
      </table>
      <form>
        <input type="hidden" value="89820" name="item_id" />
        <center>
          <button class="btn btn-success form-control" type="submit">Choisir cet objet</button>
        </center>
      </form>
      </div>
    </div>
  </script>
  <script id="item_bloc" type="text/template">
    <div class="item" style="margin-bottom:10px;">
      <table border="0" cellpadding="0" cellspacing="0" width="100%">
        <tr>
          <td width="56" class="equipement_icon" style="width:56px; height:49px;" rowspan="2" valign="top">
            <img src="http://eu.media.blizzard.com/wow/icons/56/{{item.icon}}.jpg" />
            <span class="frame frame_{{item.quality}}"> </span>
          </td>
          <td valign="top">
            <span class="color-{{item.quality}}">{{item.name}}</span>
          </td>
        </tr>
        <tr>
          <td>
            <span style="color:#ffd200;">{{item.itemLevel}}</span>
          </td>
        </tr>
      </table>
      <a href="#" rel="item={{item.id}}" class="wowheadlink"> </a>
    </div>
  </script>
  <script id="change_item" type="text/template">
    <div class="panel panel-default">
      <div class="panel-heading">Choix de votre wish list : </div>
      <div class="panel-body">
        <form role="form">
          <div class="form-group">
            <div class="col-md-6">
              <ol class="breadcrumb ariane">
                <li class="active">Armure</li>
                <li class="active">Maille</li>
                <li class="active">Tête</li>
              </ol>
              <div class="input-group">
                <span class="input-group-addon glyphicon glyphicon-search"> </span>
                <input type="text" id="search_loot" class="form-control col-md-3" placeholder="Rechercher une pièce" />
              </div>
            </div>
            <div class="col-md-6">
              <select class="filter form-control" style="margin-bottom:10px;">
                <option value="ilvl1">Niveau croissant</option>
                <option value="ilvl2" selected="selected">Niveau décroissant</option>
                <option value="name1">Nom d'objet A-Z</option>
                <option value="name2">Nom d'objet Z-A</option>
              </select>
              <select class="filter form-control" style="margin-bottom:10px;">
                <option value="normal">Normal</option>
                <option value="heroic">Heroic</option>
                <option value="mythic">Mythic</option>
                <option value="all" selected="selected">Tous types de raid</option>
              </select>
              <select class="filter form-control">
                <option value="0">Caractéristique</option>
                <option value="3">Agilité</option>
                <option value="4">Force</option>
                <option value="5">Intelligence</option>
                <option value="6">Esprit</option>
              </select>
            </div>
          </div>
        </form>
        <fieldset>
          <legend style="color:#fff; margin-top:20px;">Objets disponibles</legend>
          <div id="items_list_wish"></div>
        </fieldset>
      </div>
    </div>
  </script>
</mustache>