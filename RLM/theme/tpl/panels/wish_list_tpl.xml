<?xml version="1.0" encoding="UTF-8"?>
<mustache>
  <script id="wish_list_panel" type="text/template">
    <div class="panel panel-default">
      <div class="panel-heading">Wish List principale</div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <table class="table table-striped table-condensed" id="items_list">
              <thead>
                <tr class="head_list">
                  <td>
                    Equipement obtenu
                  </td>
                  <td>
                    Equipement souhaité
                  </td>
                  <td align="center">
                    Etat
                  </td>
                  <td align="center">
                    Actions
                  </td>
                </tr>
              </thead>
              <tbody>
              {{#equipment}}
                {{#no_item}}
                <tr id="line_{{slot}}">
                  <td align="left" class="general" width="35%">
                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                      <tr>
                        <td width="56" class="equipement_icon" style="width:56px; padding-left:5px;">
                          <img src="theme/rsc/Warning.png" />
                          <span class="frame frame_4"> </span>
                        </td>
                        <td align="left" width="245">
                          <span class="color-4">Non définie</span><br />
                        </td>
                      </tr>
                    </table>
                    <a href="#" rel="" style="position:absolute; width:35%; height:62px; margin-top:-50px; margin-left:-5px;"> </a>
                  </td>
                  <td align="left" class="general" width="35%">
                    <table border="0" cellpadding="0" cellspacing="0" width="100%">
                      <tr>
                        <td width="56" class="equipement_icon" style="width:56px; padding-left:5px;">
                          <img src=" theme/rsc/Warning.png" />
                          <span class="frame frame_1"> </span>
                        </td>
                        <td align="left" width="245">
                          <span class="color-1">Non définie</span><br />
                          <span style="color:#ffd200;">
                            0<br />
                          </span>
                        </td>
                      </tr>
                    </table>
                    <a href="#" rel="item=0&domain=fr" style="position:absolute; width:35%; height:62px; margin-top:-50px; margin-left:-5px;"> </a>
                  </td>
                  <td align="center">
                    <img src=" theme/rsc/Warning.png" width="32" /><br />Wish list non définie
                  </td>
                  <td style="padding:0px 5px;" align="center">
                    <a href="index.php?page=wish&action=change&id=1182"><span class="glyphicon glyphicon-plus" style="font-size:30px; line-height:57px;"></span></a> <a href="index.php?page=wish&action=refresh&id=1182"><span class="glyphicon glyphicon-refresh" style="font-size:30px; line-height:57px;"></span></a>
                  </td>
                </tr>
                {{/no_item}}
              {{#has_item}}
                <tr id="line_{{slot}}">
                  <td align="left" class="general" width="35%">
                    <div class="item">
                      <table border="0" cellpadding="0" cellspacing="0" width="100%">
                        <tr>
                          <td width="60" class="equipement_icon">
                            <img class="item_img" src="{{img_url}}" />
                            <span class="frame frame_{{scarcity}} item_color"> </span>
                          </td>
                          <td align="left">
                            <span class="color-{{scarcity}} item_name">{{name}}</span><br />
                            <span style="color:#ffd200;">
                              <span class="item_level">{{level}}</span>
                            </span>
                          </td>
                        </tr>
                      </table>
                      <a href="#" rel="{{item_url}}" class="wowheadlink"> </a>
                    </div>
                  </td>
                  <td align="left" class="general" width="35%">
                    <div class="item">
                      <table border="0" cellpadding="0" cellspacing="0" width="100%">
                        <tr>
                          <td width="56" class="equipement_icon" style="width:56px; padding-left:5px;">
                            <img src=" theme/rsc/Warning.png" />
                            <span class="frame frame_0"> </span>
                          </td>
                          <td align="left" width="245">
                            <span class="color-1">Non définie</span><br />
                            <span style="color:#ffd200;">
                              0<br />
                            </span>
                          </td>
                        </tr>
                      </table>
                    </div>
                  </td>
                  <td align="center">
                    <img src=" theme/rsc/Warning.png" width="32" /><br />Wish list non définie
                  </td>
                  <td style="padding:0px 5px;" align="center">
                    <span class="glyphicon glyphicon-plus add_item" rel="{{slot}}" id="wishlist_add_{{slot}}" style="font-size:30px; line-height:57px;"> </span>
                    <span class="glyphicon glyphicon-refresh refresh_item" rel="{{slot}}" id="wishlist_refresh_{{slot}}" style="font-size:30px; line-height:57px;"> </span>
                  </td>
                </tr>
                {{/has_item}}
              {{/equipment}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </script>
</mustache>