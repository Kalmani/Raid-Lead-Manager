<?xml version="1.0" encoding="UTF-8"?>
<mustache>
  <script id="items_list_panel" type="text/template">
    <div class="panel panel-default">
      <div class="panel-heading">Equipement</div>
      <div class="panel-body">
        <div class="row">
          <div class="col-md-12">
            <div class="col-md-6">
              <table class="table-condensed" width="100%">
                {{#left}}
                  {{#no_item}}
                    <tr>
                      <td align="left">
                        <div class="panel panel-warning" style="margin-bottom:10px;">
                          <div class="panel-heading">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                              <tr>
                                <td width="56" colspan="2">
                                  <span class="glyphicon glyphicon-remove-circle" style="font-size:40px;"> </span>
                                </td>
                              </tr>
                            </table>
                          </div>
                        </div>
                      </td>
                    </tr>
                  {{/no_item}}
                  {{#has_item}}
                    <tr>
                      <td align="left">
                        <div class="panel panel-{{status}}" style="margin-bottom:10px;">
                          <div class="panel-heading">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                              <tr>
                                <td width="56" class="equipement_icon" style="width:56px; padding-left:5px;">
                                  <img src="{{img_url}}" />
                                </td>
                                <td align="left">
                                  <span class="color-{{scarcity}}">
                                    {{name}}
                                  </span>
                                  <br />
                                  <span style="color:#000;">
                                    {{level}}<br />
                                  </span>
                                </td>
                              </tr>
                            </table>
                            <a href="#" rel="{{item_url}}" style="position:absolute; width:250px; height:57px; margin-top:-50px;"> </a>
                          </div>
                        </div>
                      </td>
                    </tr>
                  {{/has_item}}
                {{/left}}
              </table>
            </div>
            <div class="col-md-6">
              <table class="table-condensed" width="100%">
                {{#right}}
                  {{#no_item}}
                    <tr>
                      <td align="left">
                        <div class="panel panel-warning" style="margin-bottom:10px;">
                          <div class="panel-heading">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                              <tr>
                                <td width="56" colspan="2">
                                  <span class="glyphicon glyphicon-remove-circle" style="font-size:40px;"> </span>
                                </td>
                              </tr>
                            </table>
                          </div>
                        </div>
                      </td>
                    </tr>
                  {{/no_item}}
                  {{#has_item}}
                    <tr>
                      <td align="left">
                        <div class="panel panel-{{status}}" style="margin-bottom:10px;">
                          <div class="panel-heading">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%">
                              <tr>
                                <td width="56" class="equipement_icon" style="width:56px; padding-left:5px;">
                                  <img src="{{img_url}}" />
                                </td>
                                <td align="left">
                                  <span class="color-{{scarcity}}">
                                    {{name}}
                                  </span>
                                  <br />
                                  <span style="color:#000;">
                                    {{level}}<br />
                                  </span>
                                </td>
                              </tr>
                            </table>
                            <a href="#" rel="{{item_url}}" style="position:absolute; width:250px; height:57px; margin-top:-50px;"> </a>
                          </div>
                        </div>
                      </td>
                    </tr>
                  {{/has_item}}
                {{/right}}
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </script>
</mustache>